<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Gray shadow. -->
<item android:left="3dp" android:top="5dp">
    <shape>
        <solid android:color="@color/cardview_shadow_start_color" />
        <corners android:radius="15dp" />
    </shape>
</item>
<!-- White foreground. -->
<item android:bottom="2dp" android:right="1dp">
    <shape>
        <solid android:color="@android:color/white" />
        <corners android:radius="15dp" />
        <stroke android:color="@color/cardview_shadow_start_color" android:width=".8dp"/>
    </shape>
</item>

</layer-list>

